<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{ DynamicResource Primary }"
             xmlns:models="clr-namespace:LaCuevaDelInsecto.Models"
             x:Class="LaCuevaDelInsecto.Views.AboutPage">
    <ContentPage.BindingContext>
        <models:About />
    </ContentPage.BindingContext>
    <Frame CornerRadius="10"
           BorderColor="Transparent"
            Margin="5"
            IsClippedToBounds="True"
            HeightRequest="200"
            BackgroundColor="{ DynamicResource Secondary }"
            HorizontalOptions="CenterAndExpand"
            Padding="0">
        <VerticalStackLayout
            Spacing="20"
            Padding="10"
            VerticalOptions="FillAndExpand"
            >
            <HorizontalStackLayout Spacing="10">
                <Image 
                    Source="logo_lcdi.png"
                    SemanticProperties.Description="Enlace a la web de LaCuevaDelInsecto"
                    HorizontalOptions="Start"
                    HeightRequest="64" />
                <VerticalStackLayout Spacing="10">
                    <Label 
                        FontSize="18"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Text="{Binding Title}" />
                    <Label 
                        FontSize="22"
                        TextColor="Black"
                        Text="{Binding Version}"
                        HorizontalTextAlignment="End"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Label
                TextColor="Black"
                Text="{Binding Message}"
                HorizontalTextAlignment="Center"
                TextType="Html"/>
            <Button Text="Ir a la web..." Clicked="LearnMore_Clicked" />
        </VerticalStackLayout>
    </Frame>

</ContentPage>